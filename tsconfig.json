{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "app.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}

